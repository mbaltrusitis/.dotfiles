# remove // set to false if project-specific
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = false
trim_trailing_whitespace = true

[*.hs]
indent_size = 4
indent_style = space

[*.html]
indent_size = 2

[*.json]
indent_size = 2

[*.js]
charset = utf-8
indent_size = 2
# required
insert_final_newline = true

[*.py]
charset = utf-8
# required given GVR is annoying
indent_style = space
insert_final_newline = true

[*.tf]
indent_size = 2
indent_style = tab

[*.{yaml,yml}]
# required given YAML is annoying
indent_style = space
indent_size = 2

